<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
            android:id="@+id/btnAsk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"

            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/button_background_green"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
<!--    android:textSize="@dimen/text_medium"-->
<!--    android:layout_width="@dimen/tablet_btn_width"-->
<!--    android:layout_height="@dimen/tablet_btn_height"-->
    <TextView
            android:id="@+id/btnBid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"

            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/button_background_red"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"
            app:layout_constraintStart_toEndOf="@+id/btnAsk"
            android:layout_marginStart="16dp"/>
<!--    android:textSize="@dimen/text_medium"-->
<!--    android:layout_width="@dimen/tablet_btn_width"-->
<!--    android:layout_height="@dimen/tablet_btn_height"-->

    <ImageView
            android:visibility="gone"
            android:id="@+id/ivLockOpen"
            android:layout_width="12dp"
            android:layout_height="15dp"
            app:srcCompat="@drawable/ic_lock_open_18dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/name"
            android:layout_marginStart="5dp"/>

    <ImageView
            android:visibility="gone"
            android:id="@+id/ivLockClosed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_action_closed_lock"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/name"
            android:layout_marginStart="5dp"/>

    <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="@dimen/text_medium"
            android:textColor="@color/white"
            android:textDirection="locale"
            android:textAlignment="viewStart"
            android:fontFamily="@font/lato_bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
    />

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent=".90"
            android:id="@+id/guideline6"/>

</androidx.constraintlayout.widget.ConstraintLayout>